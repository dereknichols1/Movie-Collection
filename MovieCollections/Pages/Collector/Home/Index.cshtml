@page
@model MovieCollections.Pages.Collector.Home.IndexModel
@{
    ViewData["Title"] = "Index";
}
@foreach (var collection in Model.CollectionsList)
{
    @if (Model.CollectionsList.Where(c => c.Id == collection.Id).Count() > 0)
    {
        <div class="row container pb-3 backgroundWhite">
            <div class="col-12">
                <div class="row">
                    <h2 class="text-success pl-1"><b>@collection.Id</b></h2>

                    <div class="col-12">
                        <div class="row my-3">
                            @foreach (var movie in Model.MovieItemList.Where(c => c.MovieId == collection.MovieItem.MovieId))
                            {
                                <div class="col-lg-3 col-xl-3 col-md-6 pb-4">
                                    <div class="card" style="border:2px solid #008cba; border-radius: 5px; ">
                                        <div class="pl-3 pt-1 text-center">
                                            <h3 class="card-title text-primary"><b>@movie.Movie.Title</b></h3>
                                        </div>
                                        <div class="d-flex justify-content-between form-control" style="border:0px;">
                                            <div class="col-6 badge badge-warning text-center" style="font-size:14px;">
                                                @movie.MovieFormat
                                            </div>
                                            <div class="col-6 text-right h4" style="color:maroon;"><b>$@movie.Stock</b></div>
                                        </div>
                                        <img src="@movie.Movie.Image" class="card-img-top p-2 rounded" />
                                        <a asp-page="Details" class="btn btn-primary" style="border-radius:2px;" asp-route-id="@movie.Id">Details</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>}}